+    public Cursor fetchAllNotes() {
+
+        mDb.delete(DATABASE_TABLE, KEY_TITLE + " = ?",
+                new String[] {"" });
+
+        return mDb.query(DATABASE_TABLE, new String[] {KEY_ROWID, KEY_TITLE,
+                 KEY_FROM, KEY_SUBJ, KEY_HIDE, KEY_DEL}, null, null, null, null, null);
