+                }else{
+                    if (! subj_t.isEmpty()){
+                        if (subj.matches(subj_t)){
+                            return  getReturnValue(hide,del,c);
+                        }
+                    }
+                }
+
+            } while (c.moveToNext());
+        }
+        c.close();
+        return ACTION_ALLOW;
+    }
