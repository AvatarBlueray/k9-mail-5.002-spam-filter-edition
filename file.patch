+
+        initialValues.put(KEY_FROM, from);
+        initialValues.put(KEY_SUBJ, subj);
+        initialValues.put(KEY_HIDE, hide);
+        initialValues.put(KEY_DEL, del);
+
+        return mDb.insert(DATABASE_TABLE, null, initialValues);
+    }
